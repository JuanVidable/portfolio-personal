---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'
import VideoBackground from '../components/VideoBackground.astro'
import SectionContainer from '../components/SectionContainer.astro'
import Name from '../components/Name.astro'
import Projects from '../components/Projects.astro'

---

<Layout title="MiniPortfolio">
	
	<main>
		<div class="video-container" >
			<Header />
			<VideoBackground />
			<Name />
		</div>
		<SectionContainer>
			<h1 class="text-white text-5xl"> Proyectos </h1>
			
			<div class="flex gap-4">
				<Projects
					img='/ApiRest.webp'
					title="asd"
				/>
				<Projects
					img='/Scrap.webp'
					title="asd"
				/>
			</div>
		</SectionContainer>
	</main>
	
	
</Layout>

<style>
	.video-container{
		height: 100vh;
		position: inherit;
		
	}
	
</style>
